<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.vasiliy.srtreader.controllers.MainController">
   <children>
      <MenuBar fx:id="menuFile">
        <menus>
          <Menu mnemonicParsing="false" text="Файл">
            <items>
                  <MenuItem fx:id="menuOpenProject" mnemonicParsing="false" onAction="#openProject" text="Открыть проект" />
                  <MenuItem fx:id="menuSaveProject" mnemonicParsing="false" onAction="#saveProject" text="Сохранить проект" />
                  <MenuItem fx:id="menuSaveProjectAs" mnemonicParsing="false" onAction="#saveProjectAs" text="Сохранить проект как..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuTxtOpen" mnemonicParsing="false" onAction="#openTxtFile" text="Открыть текст" />
              <MenuItem fx:id="menuOpen" mnemonicParsing="false" onAction="#openFile" text="Открыть Srt файл" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuClose" mnemonicParsing="false" onAction="#actionClose" text="Закрыть" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Всякое">
               <items>
                  <MenuItem fx:id="menuTxtTemp" mnemonicParsing="false" onAction="#actionTemp" text="Загрузка текста" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <AnchorPane HBox.hgrow="ALWAYS">
               <children>
                  <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <AnchorPane maxHeight="30.0" prefHeight="30.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                           <children>
                              <Label text="Фильтр: " AnchorPane.leftAnchor="0.0">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="txtFilter" AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="0.0">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" top="10.0" />
                                 </padding>
                              </TextField>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                           <children>
                              <TableView fx:id="tbvTable" editable="true" onMouseClicked="#actionTableClick" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                  <TableColumn fx:id="tbcIndex" maxWidth="75.0" minWidth="55.0" prefWidth="75.0" text="Индекс" />
                                  <TableColumn fx:id="tbcTimeLine" maxWidth="400.0" minWidth="200.0" prefWidth="300.0" text="TimeLine" />
                                    <TableColumn fx:id="tbcSrtText" prefWidth="75.0" text="Srt Текст" />
                                    <TableColumn fx:id="tbcOrigText" prefWidth="75.0" text="Оригинальный текст" />
                                    <TableColumn fx:id="tbcCheckText" maxWidth="75.0" minWidth="55.0" prefWidth="75.0" text="Check" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </AnchorPane>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <AnchorPane>
                           <children>
                              <TextField fx:id="txtSearch" onKeyPressed="#actionSearch" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <padding>
                                    <Insets bottom="10.0" top="10.0" />
                                 </padding>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </AnchorPane>
                        <AnchorPane VBox.vgrow="ALWAYS">
                           <children>
                              <TextArea fx:id="textAreaOrig" prefHeight="200.0" prefWidth="200.0" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </AnchorPane>
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</VBox>
